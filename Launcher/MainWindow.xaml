<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        ResizeMode="NoResize"
        Background="#262626"
        Foreground="White"
        mc:Ignorable="d"
        Title="SyncHole Launcher" Height="540" Width="960">
    <Grid>
        <Image HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="540" Width="960" gif:ImageBehavior.AnimatedSource="Resources/Images/Magic-Download-Manager-Animated-Wallpaper.gif" Margin="0"/>
        <Button Name="ExitBtn" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Height="40" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="14" />
        <Viewbox Margin="385,432,340,58">
            <Label x:Name="status_lbl" Foreground="White" FontSize="30" Content="Loading..." HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  />
        </Viewbox>
    </Grid>
</Window>
