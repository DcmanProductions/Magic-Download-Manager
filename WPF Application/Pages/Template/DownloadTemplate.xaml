<Page x:Class="com.drewchaseproject.MDM.WPF.Pages.Template.DownloadTemplate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:com.drewchaseproject.MDM.WPF.Pages.Template"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DownloadTemplate">


    <Grid>
        <DockPanel HorizontalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Stretch">
                <Grid>
                    <TextBlock x:Name="DownloadTitle" Text="Hello" TextTrimming="CharacterEllipsis" Foreground="#E73478" FontSize="24" Margin="0,0,510,0" />
                    <TextBlock x:Name="DownloadInformation" Text="0%" Foreground="#E73478" FontSize="24" HorizontalAlignment="Center" />
                </Grid>
                <Border BorderThickness="10" BorderBrush="#0C0926">
                    <Grid Background="#0C0926" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  >
                        <Button Name="RemoveBtn" Content="X" Width="25" HorizontalAlignment="Right" Foreground="Red" />
                        <ProgressBar Name="DownloadProgressBar" Margin="0 0 25 0" />
                    </Grid>
                </Border>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
