<Page x:Class="com.drewchaseproject.MDM.WPF.Pages.Log"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:com.drewchaseproject.MDM.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Log">

    <Grid>
        <Border Background="Black" Margin="100 25">
            <ScrollViewer Name="LogViewer">
                <TextBlock Name="LogBlock" Foreground="#E73478" Margin="10" TextWrapping="WrapWithOverflow" />
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
